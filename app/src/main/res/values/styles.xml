<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>


    <style name="FilterItemCheckedState">
        <item name="android:background">@drawable/filter_item_selector</item>
    </style>
    <style name="SplashTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@color/green</item>
        <item name="android:background">@color/green</item>

    </style>
    <!-- Application theme that sets the Action Bar to the app green -->
    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
        <item name="android:icon">@drawable/ic_nav_pure_adventure</item>
    </style>

    <style name="LandAttractionTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
        <item name="android:icon">@drawable/ic_nav_campground</item>
    </style>

</resources>
